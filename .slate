## CONFIGURATION

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

default laptop count:1
default thunderbolt count:2


## ALIASES

alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topleft corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2


## LAYOUTS

# Laptop Layout
layout laptop 'Google Chrome':REPEAT ${full} 0
layout laptop 'Sublime Text 2':REPEAT ${full} 0
layout laptop 'Terminal':REPEAT ${full} 0
layout laptop 'Contacts':REPEAT ${full} 0
layout laptop 'Calendar':REPEAT ${full} 0
layout laptop 'iTunes':REPEAT ${full} 0
layout laptop 'Spotify':REPEAT ${full} 0
layout laptop 'Messages':REPEAT ${full} 0
layout laptop 'Skype':REPEAT ${full} 0
layout laptop 'Twitter':REPEAT ${righthalf} 0

# Laptop + Thunderbolt Layout
layout thunderbolt 'Sublime Text 2':REPEAT ${lefthalf} 1
layout thunderbolt 'Terminal':REPEAT ${righthalf} 1
layout thunderbolt 'Google Chrome':REPEAT ${full} 0
layout thunderbolt 'Contacts':REPEAT ${full} 0
layout thunderbolt 'Calendar':REPEAT ${full} 0
layout thunderbolt 'iTunes':REPEAT ${full} 0
layout thunderbolt 'Spotify':REPEAT ${full} 0
layout thunderbolt 'Messages':REPEAT ${full} 0
layout thunderbolt 'Skype':REPEAT ${full} 0
layout thunderbolt 'Twitter':REPEAT ${righthalf} 0


## BINDINGS

# Half and Corner Bindings
bind 0:cmd;shift ${full}
bind 1:cmd;shift ${lefthalf}
bind 2:cmd;shift ${righthalf}
bind 1:cmd;alt ${topleft}
bind 2:cmd;alt ${bottomleft}
bind 3:cmd;alt ${topright}
bind 4:cmd;alt ${bottomright}

# Layout Bindings
bind 1:ctrl;cmd layout laptop
bind 2:ctrl;cmd layout thunderbolt

# Throw Bindings
bind left:ctrl;cmd throw 0 resize
bind right:ctrl;cmd throw 1 resize

# Window Hints
bind esc:cmd hint

# Window Grid
bind g:cmd;shift grid padding:5 0:6,2 1:8,3
